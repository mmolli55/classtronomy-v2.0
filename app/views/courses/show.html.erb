<div class="page_content">

  <h1 class="link_to_home_header">Classtronomy</h1>

  <h2><%= @course.name %></h2>

  <% if current_user.try(:admin?) %>
    <%= link_to "Edit Course Materials", edit_course_path(@course) %>
  <% end %>

  <p><%= @course.paragraph1 %></p>

  <img src="<%= @course.image %>" class="course_image">

  <p><%= @course.paragraph2 %></p>

  <iframe width="560" height="315" src="<%= @course.video %>" frameborder="0" allowfullscreen></iframe>

  <p><%= @course.paragraph3 %></p>

  <%= link_to 'Take Quiz', course_questions_path(@course) %>
  <%= link_to 'Back Home', root_path %>
  <%= link_to 'Course List', courses_path %>
</div>
