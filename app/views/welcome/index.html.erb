<div class="background_image_container">

  <% if signed_in? %>
  <p class="welcome_page_signed_in_notification_container">Signed in as: <%= link_to current_user.user_name, current_user, class: "signed_in_notification" %></p>
  <% end %>

  <section class="welcome_page_content">

  <div class="welcome_page_header">Classtronomy v2.0</div>
  <nav class="welcome_page_nav">
    <%= link_to "Enroll", new_user_registration_path, class: 'welcome_nav_link' %>
    <% if current_user %>
      <%= link_to "Sign-Out", destroy_user_session_path, :method => :delete, class: 'welcome_nav_link' %>
    <% else %>
      <%= link_to "Sign-In", new_user_session_path, class: 'welcome_nav_link' %>
    <% end %>
    <%= link_to "Courses", courses_path, class: 'welcome_nav_link' %>
  </nav>

  </section>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</div>

